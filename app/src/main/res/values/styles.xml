<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Bottom Navigation styling -->
        <item name="bottomNavigationStyle">@style/MyBottomNavigationStyle</item>
    </style>

    <style name="BasmalaText">
        <item name="android:textSize">26sp</item> <!-- Slightly smaller -->
        <item name="android:lineSpacingMultiplier">0.7</item> <!-- Tighter line spacing -->
        <item name="android:fontFamily">@font/mushaf</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:includeFontPadding">false</item> <!-- Crucial -->
        <item name="android:gravity">center</item>
    </style>

    <!-- Custom BottomNavigationView style -->
    <style name="MyBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/text_primary</item>
        <item name="itemTextColor">@color/text_primary</item>
        <item name="android:background">@color/background_blue</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>