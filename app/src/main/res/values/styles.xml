<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Bottom Navigation styling -->
        <item name="bottomNavigationStyle">@style/MyBottomNavigationStyle</item>
    </style>

    <!-- Add this style to your styles.xml -->
    <style name="BasmalaText">
        <item name="android:textSize">26sp</item> <!-- Slightly smaller for density -->
        <item name="android:lineSpacingMultiplier">0.7</item> <!-- Tighter spacing -->
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/basmala_gold</item>
        <item name="android:background">@drawable/basmala_background</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Custom BottomNavigationView style -->
    <style name="MyBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/text_primary</item>
        <item name="itemTextColor">@color/text_primary</item>
        <item name="android:background">@color/background_dark</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>